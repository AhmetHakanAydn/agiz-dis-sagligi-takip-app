@section Scripts {
    <script>
        // Initialize weekly chart
        $(document).ready(function() {
            initializeWeeklyChart();
            initializeQuickActivityModal();
        });

        function initializeWeeklyChart() {
            $.get('@Url.Action("GetWeeklyChart")', function(data) {
                const ctx = document.getElementById('weeklyChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: data,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: '#f1f3f4'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        elements: {
                            point: {
                                radius: 6,
                                hoverRadius: 8,
                                backgroundColor: '#007bff',
                                borderColor: '#fff',
                                borderWidth: 2
                            },
                            line: {
                                tension: 0.4
                            }
                        }
                    }
                });
            }).fail(function() {
                $('#weeklyChart').parent().html('<p class="text-center text-muted">Grafik yÃ¼klenemedi</p>');
            });
        }

        function initializeQuickActivityModal() {
            // Activity type selection
            $('.activity-type-btn').on('click', function() {
                $('.activity-type-btn').removeClass('active');
                $(this).addClass('active');
                $('#activityType').val($(this).data('type'));
            });

            // Rating stars
            $('.rating-stars i').on('click', function() {
                const rating = $(this).data('rating');
                $('#activityRating').val(rating);
                
                $('.rating-stars i').removeClass('active');
                $('.rating-stars i').each(function() {
                    if ($(this).data('rating') <= rating) {
                        $(this).addClass('active');
                    }
                });
            });

            // Initialize with first activity type and 5 stars
            $('.activity-type-btn').first().addClass('active');
            $('#activityType').val($('.activity-type-btn').first().data('type'));
            $('.rating-stars i').addClass('active');
        }

        function submitQuickActivity() {
            const activityType = $('#activityType').val();
            const duration = $('#activityDuration').val();
            const rating = $('#activityRating').val();
            const notes = $('#activityNotes').val();

            if (!activityType) {
                showToast('LÃ¼tfen bir aktivite tÃ¼rÃ¼ seÃ§in', 'warning');
                return;
            }

            if (!duration || duration < 1) {
                showToast('LÃ¼tfen geÃ§erli bir sÃ¼re girin', 'warning');
                return;
            }

            const data = {
                type: parseInt(activityType),
                duration: parseInt(duration) * 60, // Convert to seconds
                notes: notes
            };

            $.ajax({
                url: '@Url.Action("QuickActivity")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    if (response.success) {
                        $('#quickActivityModal').modal('hide');
                        showToast(response.message, 'success');
                        
                        // Reset form
                        $('#quickActivityForm')[0].reset();
                        $('.activity-type-btn').removeClass('active');
                        $('.activity-type-btn').first().addClass('active');
                        $('#activityType').val($('.activity-type-btn').first().data('type'));
                        $('.rating-stars i').addClass('active');
                        $('#activityRating').val('5');
                        
                        // Refresh page after a short delay
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function() {
                    showToast('Bir hata oluÅŸtu. LÃ¼tfen tekrar deneyin.', 'error');
                }
            });
        }

        function showToast(message, type) {
            // Simple toast implementation
            const toast = $(`
                <div class="toast-notification toast-${type}">
                    <i class="fas ${type === 'success' ? 'fa-check' : type === 'warning' ? 'fa-exclamation-triangle' : 'fa-times'}"></i>
                    <span>${message}</span>
                </div>
            `);
            
            $('body').append(toast);
            
            setTimeout(() => {
                toast.addClass('show');
            }, 100);
            
            setTimeout(() => {
                toast.removeClass('show');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Sidebar toggle for mobile
        function toggleSidebar() {
            $('.sidebar').toggleClass('show');
        }
    </script>
    
