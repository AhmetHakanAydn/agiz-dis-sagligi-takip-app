@model DentalHealthApp.Core.DTOs.GoalCreateDto
@{
    ViewData["Title"] = "Yeni Hedef Oluştur";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Yeni Hedef Oluştur
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateGoal" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-target me-1"></i>Hedef Başlığı
                            </label>
                            <input asp-for="Title" type="text" class="form-control" 
                                   placeholder="Örn: Günlük diş fırçalama" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-1"></i>Açıklama (İsteğe Bağlı)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Hedeflerin hakkında detaylı bilgi..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Period" class="form-label">
                                    <i class="fas fa-clock me-1"></i>Periyot
                                </label>
                                <select asp-for="Period" class="form-select" required>
                                    <option value="">Periyot seçiniz</option>
                                    <option value="1">Günlük</option>
                                    <option value="2">Haftalık</option>
                                    <option value="3">Aylık</option>
                                </select>
                                <span asp-validation-for="Period" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ImportanceLevel" class="form-label">
                                    <i class="fas fa-exclamation-triangle me-1"></i>Önem Derecesi
                                </label>
                                <select asp-for="ImportanceLevel" class="form-select" required>
                                    <option value="">Önem derecesi seçiniz</option>
                                    <option value="1">Düşük</option>
                                    <option value="2">Orta</option>
                                    <option value="3">Yüksek</option>
                                    <option value="4">Kritik</option>
                                </select>
                                <span asp-validation-for="ImportanceLevel" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>İpucu:</strong> Başarılı olmak için gerçekçi ve ölçülebilir hedefler belirleyin.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Hedef Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}